<%= simple_form_for @restaurant do |r| %>
  <%= r.error_notification %>

  <div class='form-group'>
    <%= r.label :name %>
    <%= r.text_field :name, class: 'form-control' %>
  </div>
  <p></p>
  <div class='form-group'>
    <%= r.label :category %>
    <%= r.text_field :category, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= r.submit class: 'btn btn-danger' %>
  </div>
  <div class='row m-1'>
    <%= link_to restaurants_path do %>
    <i class='fa fa-hand-o-left' aria-hidden='true'> Back To Restaurants List</i>
    <% end %>
  </div>
<% end %>
